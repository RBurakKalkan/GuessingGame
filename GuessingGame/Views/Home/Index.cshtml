@{
    ViewData["Title"] = "Home Page";
}


<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <h1>Welcome to the Guess the Number Game!</h1>

        <p>
            The rules of the game are simple:
            <ul>
                <li>The program chooses a random secret number with 4 digits.</li>
                <li>All digits in the secret number are different.</li>
                <li>You have 8 tries to guess the secret number.</li>
                <li>After each guess the program displays the message "M:m; P:p" where:</li>
                <ul>
                    <li>m - number of matching digits but not on the right places</li>
                    <li>p - number of matching digits on exact places</li>
                </ul>
                <li>The game ends after 8 tries or if the correct number is guessed.</li>
            </ul>
        </p>
    </div>
</div>
<div class="d-flex flex-column align-items-center">
    <form id="startGameForm" method="post" action="/Home/StartGame">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <span id="playerNameError" class="text-danger"></span>
        </div>
        <button type="submit" id="startGameButton" class="btn btn-primary">Start Game</button>
    </form>
</div>

